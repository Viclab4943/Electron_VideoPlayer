{
  "name": "videoplayer",
  "version": "1.0.0",
  "description": "Fullscreen Video Player with Flic Button Support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.yourcompany.videoplayer",
    "productName": "Video Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!videos/**/*",
      "videos/.gitkeep"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static",
        "to": "ffmpeg",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.entertainment",
      "icon": "icon.png"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "AudioVideo",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  }
}